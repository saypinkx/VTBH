{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@yandex/ymaps3-types/index.d.ts"
  ]
}
